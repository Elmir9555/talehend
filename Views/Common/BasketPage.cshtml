    <section id="cart-btns">
        <div class="cart-btns">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <div class="continue">
                            <button>
                                <a asp-controller="Shop" asp-area="" asp-action="ShopPage"> CONTINUE SHOPPING</a>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
